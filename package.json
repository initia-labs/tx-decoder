{
  "name": "@initia/tx-decoder",
  "version": "0.0.2",
  "description": "A pluggable library to decode Cosmos-based blockchain transactions.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "test": "jest --config=jest.config.ts",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cosmos",
    "blockchain",
    "transaction",
    "decoder"
  ],
  "author": "Kanisorn",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/big.js": "^6.2.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.0.0",
    "eslint": "^9.28.0",
    "eslint-plugin-perfectionist": "^4.14.0",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2",
    "typescript-eslint": "^8.34.0"
  },
  "dependencies": {
    "big.js": "^7.0.1",
    "cosmjs-types": "^0.9.0",
    "immer": "^10.1.1",
    "zod": "^3.25.62"
  }
}
